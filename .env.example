# JWT Secret for authentication tokens
JWT_SECRET=your_jwt_secret_here_change_this_to_a_random_string

# Email Service (Choose ONE of the options below)

# OPTION 1: Resend (Recommended for Railway - 3000 emails/month free)
# Sign up at https://resend.com and get your API key
RESEND_API_KEY=re_your_api_key_here

# OPTION 2: SMTP Fallback (Gmail App Password)
# Only needed if not using Resend
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_16_char_app_password_here

# Node Environment (development or production)
NODE_ENV=production

# Port (Railway/Hostinger will set this automatically)
PORT=3000

# Firebase Service Account (Base64 encoded for cloud deployment)
FIREBASE_SERVICE_ACCOUNT_BASE64=your_base64_encoded_firebase_json
